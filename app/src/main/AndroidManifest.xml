<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.formulastudent.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".FSSApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".mvp.view.activity.login.LoginActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".mvp.view.activity.NFCReaderActivity"
            android:label="Formula Student Spain"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".mvp.view.activity.timeline.TimelineActivity"
            android:label="Formula Student Spain"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".mvp.view.activity.timelinedetail.TimelineDetailActivity"
            android:label="Formula Student Spain"
            android:launchMode="singleTop">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mvp.view.activity.timeline.TimelineActivity"/>
        </activity>

        <activity
            android:name=".mvp.view.activity.userlist.UserListActivity"
            android:label="Formula Student Spain"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".mvp.view.activity.briefing.BriefingActivity"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".mvp.view.activity.userdetail.UserDetailActivity"
            android:label="User detail"
            android:launchMode="singleTop">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mvp.view.activity.timeline.TimelineActivity"/>
        </activity>

        <activity
            android:name=".mvp.view.activity.dynamicevent.DynamicEventActivity">
        </activity>

        <activity
            android:name=".mvp.view.activity.prescrutineeringdetail.PreScrutineeringDetailActivity"
            android:label="Egress chrono"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mvp.view.activity.dynamicevent.DynamicEventActivity"/>
        </activity>

        <activity
            android:name=".mvp.view.activity.welcome.WelcomeActivity">
        </activity>

        <activity
            android:name=".mvp.view.activity.statistics.StatisticsActivity">
        </activity>
    </application>

</manifest>